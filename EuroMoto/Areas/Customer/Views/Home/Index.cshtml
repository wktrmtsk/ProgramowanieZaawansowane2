@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top-0 border-5 rounded">
                        <img src ="@product.ImageURL" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">Producent:<b> @product.Producent</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-center">Cena:<span>@product.ListPrice.ToString("c")</span></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a href="#" class="btn btn-primary bg-gradient border-0 form-control rounded">
                            Szczegóły
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>