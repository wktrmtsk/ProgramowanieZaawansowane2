@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Zarejestruj się!</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
    <div class="col-md-12">
        <form id="registerForm" class="row " asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h3 class="border-bottom pb-3 mb-4 text-secondary text-center ">Utwórz konto</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="jan.nowak@emial.com" />
                <label asp-for="Input.Email" class="ms-2">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Hasło" />
                <label asp-for="Input.Password" class="ms-2">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Hasło" />
                <label asp-for="Input.ConfirmPassword" class="ms-2">Powtórz hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                 <input asp-for="Input.Name" class="form-control" placeholder="Jan Nowak" />
                 <label asp-for="Input.Name" class="ms-2">Imie i nazwisko</label>
                 <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                 <input asp-for="Input.StreetAddress" class="form-control" placeholder="Nowa 12" />
                 <label asp-for="Input.StreetAddress" class="ms-2">Ulica</label>
                 <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                 <input asp-for="Input.City" class="form-control" placeholder="Poznań" />
                 <label asp-for="Input.City" class="ms-2">Miasto</label>
                 <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                 <input asp-for="Input.State" class="form-control" placeholder="Wielkopolska" />
                 <label asp-for="Input.State" class="ms-2">Województwo</label>
                 <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                 <input asp-for="Input.PostalCode" class="form-control" placeholder="00-000" />
                 <label asp-for="Input.PostalCode" class="ms-2">Kod pocztowy</label>
                 <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                  <input asp-for="Input.PhoneNumber" class="form-control" placeholder="123 456 789" />
                  <label asp-for="Input.PhoneNumber" class="ms-2">Numer telefonu</label>
                  <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>Wybierz rolę</option>
                </select>
            </div>
            <div class="col-12">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj</button>
            </div>
        </form>
    </div>
    <div class="col-md-12">
        <section>
            <p class="pt-3 text-center">lub</p>
            <h3>Use another service to register.</h3>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                    about setting up this ASP.NET application to support logging in via external services</a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
        </section>
    </div>
</div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
