@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class=" text-white py-2">Lista produktów</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Dodaj</a>
            </div>
        </div>
        <table id="tblData"class="table table-bordered tabletable-striped" style="width:100%">
            <thead>
                <tr>
                    <th>nazwa</th>
                    <th>Producent</th>
                    <th>numer seryjny</th>
                    <th>Cena</th>
                    <th>Kategoria</th>
                    <th></th>
                </tr>
            </thead>

            
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
