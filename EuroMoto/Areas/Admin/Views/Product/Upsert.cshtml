@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Aktualizuj":"Dodaj") produkt</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageURL" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Name" class="form-control border-0 shadow" />
                            <label asp-for="Product.Name" class="ns-2"></label>
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ns-2 text-muted"></label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.SerialNumber" class="form-control border-0 shadow" />
                            <label asp-for="Product.SerialNumber" class="ns-2"></label>
                            <span asp-validation-for="Product.SerialNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Producent" class="form-control border-0 shadow" />
                            <label asp-for="Product.Producent" class="ns-2"></label>
                            <span asp-validation-for="Product.Producent" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                            <label asp-for="Product.ListPrice" class="ns-2"></label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disbaled selected>Wybierz Kategorie</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ns-2"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Product.ImageURL" class="ns-2"></label>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Aktualizuj</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Dodaj</button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn bnt-outline-primary border form-control">
                                    Wróć
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ImageURL" width="100%"
                    style="border-radius:5px; border:1px solid #bbb9b9"/>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
          selector: 'textarea',
          apiKey:  'pcyfsqdgf3qdtnewlah3p4cjyc66mcbdh7gf39f39hvaig8i',
          plugins: 'anchor autolink charmap codesamle emotions lists table visualblocks wordcount',
          toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline striketrought | align lineheight | numlist bullist indent outdent'
        });
    </script>
    @{
        <partial name ="_ValidationScriptsPartial" />
    }
}